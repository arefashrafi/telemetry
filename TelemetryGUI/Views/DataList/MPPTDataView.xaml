<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:DataList="clr-namespace:TelemetryGUI.ViewModel.DataList" x:Class="TelemetryGUI.Views.MPPTDataView"
    mc:Ignorable="d"

    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.DataContext>
            <DataList:MPPTViewModel />
        </Grid.DataContext>
        <DockPanel Grid.Row="1">
            <ContentControl>
                <DataGrid SelectionChanged="DataGrid_OnSelectionChanged" x:Name="DataGrid"
                          ItemsSource="{Binding MPPTs}"
                          VerticalContentAlignment="Stretch"
                          HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />
            </ContentControl>
        </DockPanel>
    </Grid>
</UserControl>